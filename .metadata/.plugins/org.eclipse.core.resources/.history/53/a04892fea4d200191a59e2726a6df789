package Practice3a;

import java.util.Scanner;

public class quiz5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scanner = new Scanner(System.in);
	    
	    int num, pos = 0, neg = 0, sums = 0, lp = 0;
	    
	    do {
	      System.out.println("Enter an integer, the input ends if it is 0: \n");
	      num = scanner.nextInt();
	      sums = sums + num;
	      lp++;
	      
	      if(num > 0) {
	        pos++;
	      } else if(num == 0) {
	        
	        if(lp == 1) {
	          System.out.println("No numbers are entered except 0\n");
	        } else {
	          System.out.println("\nNumber of positives: " + pos);
	          System.out.println("Number of negatives: " + neg);
	          System.out.println("Sums of numbers: " + sums);
	          System.out.println("Average is: " + (sums/lp));
	        }
	        
	      } else {
	        neg++;
	      }
	        
	    } while(!(num == 0));
	    
	    scanner.close();
	}

}
